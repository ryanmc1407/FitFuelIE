<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Compose app -->
    <!-- This theme is only used for the Activity wrapper, actual theming is done in Compose -->
    <style name="Theme.FitFuelIE" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/secondary_blue</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_green</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/surface_light</item>
    </style>
</resources>
